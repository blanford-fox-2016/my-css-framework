/* Grid System
   =========================
*/

.ju-container
  position: relative
  width: 100%
  max-width: 960px
  margin: 0 auto
  padding: 0 22px
  box-sizing: border-box;

.ju-column
  width: 100%
  float: left
  box-sizing: border-box

@media (min-width: 400px)
  .ju-container
    width: 80%
    padding: 0

@media (min-width: 550px)
  .ju-container
    width: 80%
  .ju-column
    margin-left: 4%

