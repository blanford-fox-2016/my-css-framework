@import 'normalize.css'
@import url('https://fonts.googleapis.com/css?family=Roboto:400,700i|Ubuntu:400,700i');


/* html
   ==========================================
*/

html
  height: 100%


body
  font-family: Ubuntu, Roboto, "Helvetica Neue", Arial, sans-serif
  font-size: 1rem
  font-weight: normal
  line-height: 1.5
  color: #6C7A89
  background-color: #fff
  margin: 0px
  padding: 0px


/* Typography
   ==========================================
*/

/* --- Header -----*/

h1
h2
h3
h4
h5
  font-family: 'Lato', 'Helvetica Neue', Arial, Helvetica, sans-serif /*specific for h5*/
  line-height: 1.2857em
  margin: calc(2rem -  0.14285em ) 0em 1rem
  font-weight: bold
  padding: 0em

