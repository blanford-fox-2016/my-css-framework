@import url('https://fonts.googleapis.com/css?family=Open+Sans|Roboto')

/* LAYOUT AND GRID*/
*
  box-sizing border-box

html
body
  width 100%
  height 100%
  margin 0
  padding 0
  background-color #eceff1
  font-family 'Roboto', sans-serif
  font-weight lighter

.container
  width 90%
  padding 0 10px
  margin auto

.row
  margin 10px 0

  &after
    content ""
    clear both
    display block

[class*="s-"]
[class*="m-"]
[class*="l-"]
  float left
  padding 10px
  width 100%

/*For Mobile Phone*/
@media only screen and (min-width 480px)
  .m-50
  .l-50
    width 100%

  .m-33
  .l-33
    width 100%

  .m-66
  .l-66
    width 100%

  .m-25
  .l-25
    width 100%

  .m-75
  .l-75
    width 100%

  .s-100
    width 100%

  .s-50
    width 50%

  .s-33
    width 33.33333%

  .s-66
    width 66.66666%

  .s-25
    width 25%

  .s-75
    width 75%

/*For Tablet*/
@media only screen and (min-width 767px)
  .l-
    &25
    &33
    &50
    &66
    &75
    &100
      width 100%
  .m-
    &100
      width 100%
    &75
      width 75%
    &66
      width 66.66666%
    &50
      width 50%
    &33
      width 33.33333%
    &25
      width 25%

/*Desktop*/
@media only screen and (min-width 1200px)

  .l-
    &75
      width 75%
    &66
      width 66.66666%
    &50
      width 50%
    &33
      width 33.33333%
    &25
      width 25%

  .l-
    &100
      width 100%

/*content alignment*/
.center
  text-align center

.l-eft
  text-align left

.right
  text-align right

.fl
  float left !important

.fr
  float right !important

.clearfix
  clear both

